<?xml version="1.0"?>
<launch>
  <arg name="name" />
  <arg name="number" default="1" />
  <arg name="cf_num" default="0" />
  <arg name="frame" default="$(arg name)/base_link" />
  <arg name="joy_dev" default="/dev/input/js0" />
  <arg name="x" default="0" />
  <arg name="y" default="0" />
  <arg name="z" default="0.5" />
<!--   <arg name="path" />
  <arg name="mode" default="2" /> -->

  <!-- <node name="make_rviz" pkg="crazyflie_teleop" type="make_rviz.sh" args="$(arg name)">
  </node> -->

  <group ns="$(arg name)">

	<node name="pose_converter" type="pose_converter.py" pkg="crazyflie_tools" args="$(arg name) $(arg number)">
    </node>

<!--     <include file="$(find crazyflie_teleop)/launch/localization.launch">
      <arg name="name" value="$(arg name)"/>
    </include> -->

    <include file="$(find crazyflie_driver)/launch/crazyflie_add.launch">
      <arg name="name" value="$(arg name)" />
      <arg name="enable_logging" value="True" />
    </include>

    <node name="joy" pkg="joy" type="joy_node" output="screen">
      <param name="dev" value="$(arg joy_dev)" />
    </node>

<node name="joystick_controller" pkg="crazyflie_teleop" type="controller.py" output="screen"> 
      <param name="use_crazyflie_controller" value="True" />
    </node> 

    <node name="waypoint_nav" pkg="crazyflie_teleop" type="waypoint.py" output="screen" args="$(arg cf_num)">
    </node>


    <!--<node name="crawler" pkg="crazyflie_teleop" type="crawler.py" output="screen">
    </node>-->

    <!--<node name="roller" pkg="crazyflie_teleop" type="roller.py" output="screen">
    </node>-->
    <include file="$(find crazyflie_controller)/launch/crazyflie2.launch">
      <arg name="frame" value="$(arg frame)" />
    </include>

    <node name="path_display" pkg="crazyflie_tools" type="path_display.py" output="screen" >
    </node>

    <node name="sim_path_display" pkg="crazyflie_tools" type="sim_path_display.py" output="screen" args="$(arg cf_num)" >
    </node>

    <node pkg="tf" type="static_transform_publisher" name="baselink_broadcaster" args="0 0 0 0 0 0 1 $(arg frame) /Robot_$(arg number)/pose 100" /><!--Isn't messing anything up rn, but should maybe edit/remove this line NTS -->
  </group> 
</launch>